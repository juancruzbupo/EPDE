{
  "name": "epde",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prepare": "husky",
    "db:push": "pnpm --filter @epde/api exec prisma db push",
    "db:migrate": "pnpm --filter @epde/api exec prisma migrate dev",
    "db:seed": "pnpm --filter @epde/api exec prisma db seed",
    "db:studio": "pnpm --filter @epde/api exec prisma studio",
    "db:generate": "pnpm --filter @epde/api exec prisma generate"
  },
  "devDependencies": {
    "turbo": "^2",
    "typescript": "^5.7",
    "prettier": "^3.5",
    "prettier-plugin-tailwindcss": "^0.6",
    "eslint": "^9",
    "@eslint/js": "^9",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint-config-prettier": "^10",
    "husky": "^9",
    "@commitlint/cli": "^19",
    "@commitlint/config-conventional": "^19",
    "lint-staged": "^15"
  },
  "packageManager": "pnpm@10.6.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
